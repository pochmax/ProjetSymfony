{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<h1>Register</h1>

	{{ form_start(registrationForm) }}

	<div>
		{{ form_label(registrationForm.Nom, "Nom",{'label_attr' : { 'class':'sr-only'}}) }}
		{{ form_errors(registrationForm.Nom) }}
		{{form_widget(registrationForm.Nom, {'attr' : {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placehorder': 'Password'  }}) }}
	</div>
	<div>
		{{ form_label(registrationForm.Prenom, "Prenom",{'label_attr' : { 'class':'sr-only'}}) }}
		{{ form_errors(registrationForm.Prenom) }}
		{{form_widget(registrationForm.Prenom, {'attr' : {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placehorder': 'Password'  }}) }}
	</div>
	<div>
		{{ form_label(registrationForm.UserName, "UserName",{'label_attr' : { 'class':'sr-only'}}) }}
		{{ form_errors(registrationForm.UserName) }}
		{{form_widget(registrationForm.UserName, {'attr' : {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placehorder': 'Password'  }}) }}
	</div>
	<div>
		{{ form_label(registrationForm.email, "password",{'label_attr' : { 'class':'sr-only'}}) }}
		{{ form_errors(registrationForm.email) }}
		{{form_widget(registrationForm.email, {'attr' : {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placehorder': 'Password'  }}) }}
	</div>
	<div>
		{{ form_label(registrationForm.plainPassword, "password",{'label_attr' : { 'class':'sr-only'}}) }}
		{{ form_errors(registrationForm.plainPassword) }}
		{{form_widget(registrationForm.plainPassword, {'attr' : {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placehorder': 'Password'  }}) }}
	</div>


	<div>
		<button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
			<span class="absolute left-0 inset-y-0 flex items-center pl-3">

				<svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true">
					<path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
				</svg>
			</span>
			Register
		</button>
	</div>
	<!-- {{ form_row(registrationForm.agreeTerms) }} -->


	{{ form_end(registrationForm) }}
{% endblock %}
