{% extends 'base.html.twig' %}

{% block title %}Blog
{% endblock %}

{% block body %}
	<br>
	<div class="container flex justify-center ">

		<h1 class="text-3xl text-cyan-500">Blog</h1>

	</div>
	<br>
	<div class="container flex justify-center mx-auto">
		<div class="flex flex-col">
			<div class="w-full">
				<div class="border-b border-gray-200 shadow">
					<table class="divide-y divide-gray-300 ">
						<tbody class="bg-white divide-y divide-gray-300">
							<tr class="whitespace-nowrap">
								<th class="px-6 py-4 text-sm text-gray-500">Id</th>
								<td>{{ blog.id }}</td>
							</tr>
							<tr class="whitespace-nowrap">
								<th class="px-6 py-4 text-sm text-gray-500">Title</th>
								<td>{{ blog.title }}</td>
							</tr>
							<tr class="whitespace-nowrap">
								<th class="px-6 py-4 text-sm text-gray-500">Content</th>
								<td>{{ blog.content }}</td>
							</tr>
							<tr class="whitespace-nowrap">
								<th class="px-6 py-4 text-sm text-gray-500">Author</th>
								<td>{{ blog.author.NickName }}</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
			{% if is_granted('ROLE_ADMIN') %}

				<button class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-1 px-2 rounded">
					<a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>
				</button>
				<center>
					{{ include('blog/_delete_form.html.twig') }}
			</center>
			{% endif %}
			  <button class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-1 px-2 rounded"> <a href="{{ path('blog_index') }}">back to list</a> </button>
    
		</div>
	</div>


{% endblock %}
